<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments_bottom_nav.HomeFragment"
    android:layout_margin="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageButton
                android:src="@drawable/ic_account"
                android:backgroundTint="#FFF"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="250dp"
                android:layout_height="70dp" />
            <ImageButton
                android:src="@drawable/outline_menu"
                android:backgroundTint="#FFF"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Let's Enjoy"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#4C4B4B"
            android:text="Your Vacation!"/>
        <EditText
            android:id="@+id/edSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_rounded"
            android:drawableEnd="@drawable/map_search_outline"
            android:drawablePadding="10dp"
            android:hint="   Ingrese un lugar para buscar"
            android:inputType="textAutoComplete"
            android:padding="13dp"
            android:textColor="#545454"
            android:textColorHint="#545454" />
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            app:cnb_menuResource="@drawable/test1"
            app:cnb_orientationMode="horizontal"
            app:cnb_unselectedColor="#000" />
        <FrameLayout
            android:id="@+id/container_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>